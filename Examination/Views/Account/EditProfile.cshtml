@model EditProfileViewModel;
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
  

}

    <!--custom css-->
     <link rel="stylesheet" href="~/css/EditProfileUser.css" />

    <div class="profile-page">
        <div class="content">
          <div class="content__cover">
 
            <div class="content__avatar" style="background-image:url('/Images/@ViewBag.UserInfo.ImageUrl')"></div>
            <div class="content__bull"><span></span><span></span><span></span><span></span><span></span>
            </div>
          </div>

            <div class="content__title">
            <h1>@ViewBag.UserInfo.Name</h1>
        </div>
        <form  asp-controller="Account" method="post">
          <div class="content__description">
            <div class="form-group row mb-2">
                <label class="col-md-3 control-label ">Email:</label>
                <div class="col-md-6">
                        <input class="form-control" name="email" value="@ViewBag.UserInfo.Email" readonly>
                </div>

              </div>
           <div class="form-group row mb-2">

                <label class="col-md-3 control-label ">Password:</label>
                <div class="col-md-6">
                        <input class="form-control" asp-for="@Model.oldPass" required>
                        <span asp-validation-for="@Model.oldPass"></span>
                </div>
            </div>
            <div class="form-group row mb-2">

                <label class="col-md-3 control-label">new password:</label>
                <div class="col-md-6">
                        <input class="form-control" asp-for="@Model.newPass">
                        <span asp-validation-for="@Model.newPass"></span>

                </div>
            </div>
            <div class="form-group row mb-2">

                <label class="col-md-3 control-label">Confirm password:</label>
                <div class="col-md-6">
                        <input class="form-control" asp-for="@Model.conFirmPass">

                </div>

            </div>
           


          </div>

          <div class="content__button">
            <input type="submit" class="btn btn-primary" value="Save Changes">
              <span></span>
              <input type="reset" class="btn btn-default"  value="Cancel">
            </div>
      </form>
        <!-- Display update result message here -->
        @if (ViewBag.UpdateResult != null)
        {
            <div class="alert alert-info">
                @ViewBag.UpdateResult
            </div>
        }
        </div>
        <div class="bg">
          <div><span></span><span></span><span></span><span></span><span></span><span></span><span></span>
          </div>
        </div>
        <div class="theme-switcher-wrapper" id="theme-switcher-wrapper"><span>Themes color</span>
          <ul>
            <li><em class="is-active" data-theme="orange"></em></li>
            <li><em data-theme="green"></em></li>
            <li><em data-theme="purple"></em></li>
            <li><em data-theme="blue"></em></li>
          </ul>
        </div>
        <div class="theme-switcher-button" id="theme-switcher-button">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
            <path fill="currentColor" d="M352 0H32C14.33 0 0 14.33 0 32v224h384V32c0-17.67-14.33-32-32-32zM0 320c0 35.35 28.66 64 64 64h64v64c0 35.35 28.66 64 64 64s64-28.65 64-64v-64h64c35.34 0 64-28.65 64-64v-32H0v32zm192 104c13.25 0 24 10.74 24 24 0 13.25-10.75 24-24 24s-24-10.75-24-24c0-13.26 10.75-24 24-24z"></path>
          </svg>
        </div>
      </div>


@if (ViewBag.UpdateResult != null && !(bool)ViewBag.UpdateResult)
{
    <div class="alert alert-danger" role="alert">
        Error occurred while updating.
    </div>
}
