@model Student

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/mainlayoutcass.css" rel="stylesheet" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/css/tablestd.css" rel="stylesheet" />
    <title>Get Student Grade</title>
    <style>
        .divsearch {
            margin-left: 700px;
            margin-top: -30px;
        }

        #searchButton {
            padding: 8px 16px;
            border: none;
            background-color: #6943ce;
            color: white;
            border-radius: 4px;
            cursor: pointer;
        }

        #searchText {
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ccc;
            margin-left: 200px;
        }

    </style>
</head>
<body>


    <div>
        <h4 style="color:#6943ce; display: inline-block;">Welcome</h4>
        <h4 style="color:black; display: inline-block;">@Model.Sname</h4>
    </div>





    <div class="divsearch" style="margin-bottom: 20px; ">
        <input type="text" id="searchText" placeholder="Enter search text">
        <button id="searchButton"><i class="fa-solid fa-magnifying-glass"></i></button>
    </div>
    <h5 style="margin-left:500px">My Courses and Grade</h5>
    <table class="rwd-table w-100" id="keywords">
        <thead>
            <tr style="background-color: #6943ce">
                <th>CourseName</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            <tr> </tr>
            @foreach (var course in ViewBag.Courses)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.Grade</td> <!-- Changed from Stgrade to Grade -->
                </tr>
            }
        </tbody>
    </table>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchButton").on("click", function () {
                var searchText = $("#searchText").val().trim().toLowerCase();


                $("#keywords tbody tr").each(function () {
                    var row = $(this);
                    var rowVisible = false;


                    row.find("td").each(function () {
                        var cellText = $(this).text().trim().toLowerCase();
                        if (cellText.includes(searchText)) {
                            rowVisible = true;
                            return false;
                        }
                    });


                    if (rowVisible) {
                        row.show();
                    } else {
                        row.hide();
                    }
                });
            });
        });
    </script>


</body>
</html>

