                        @foreach (var track in trackCourses)
                        {
                            <div class="form-group mt-4 col-md-6">
                                <label>Courses for @track.Key.Tname:</label>
                                <select name="@($"courses_{track.Key.TId}")" class="form-control" multiple>
                                    @foreach (var course in track.Value.allCourses)
                                    {
                                        <option value="@course.CrId" selected="@track.Value.userChoices.Any(c => c.CrId == course.CrId)">
                                            @course.Cname
                                        </option>
                                    }
                                </select>
                            </div>
